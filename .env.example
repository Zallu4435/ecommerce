# ===== Backend Configuration =====
PORT=5000
NODE_ENV=production

# ===== Database Configuration =====
MONGO_URI=your_mongodb_connection_string

# ===== Frontend URL (for CORS) =====
ORIGIN=http://localhost:5173

# ===== JWT Configuration =====
JWT_SECRET_KEY=your_jwt_secret_key
JWT_EXPIRES=1m
JWT_REFRESH_SECRET_KEY=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRE=1d
JWT_ACTIVATION_SECRET=your_jwt_activation_secret

# ===== Email Configuration (Resend API) =====
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
# Optional: Custom sender email (must be verified in Resend)
# Default: onboarding@resend.dev
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===== Google OAuth =====
GOOGLE_CLIENT_ID=your_google_client_id

# ===== OTP Configuration =====
OTP_EXPIRATION=10m
OTP_SECRET=your_otp_secret

# ===== Frontend Configuration =====
VITE_SERVER_URL=http://localhost:5000

# ===== Google OAuth =====
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# ===== Cloudinary Configuration =====
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_URL=https://api.cloudinary.com/v1_1/your_cloudinary_cloud_name/image/upload
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
VITE_CLOUDINARY_FOLDER=your_folder_name

# ===== Razorpay Configuration =====
VITE_RAZORPAY_KEY=your_razorpay_key